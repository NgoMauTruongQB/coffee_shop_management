                @if (ViewBag.totalCost != -1)
                {
                    <tbody id="order-list">
                        <tr>
                            <th>Tên món</th>
                            <td></td>
                            @foreach (var item in ViewBag.listOrderProduct)
                            {
                                <td class="text-center">@item.Name</td>
                            }
                        </tr>
                        <tr>
