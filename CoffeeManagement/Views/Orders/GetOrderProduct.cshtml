        <div id="order-form" class="m-5">
            @using (Html.BeginForm("OrderProduct", "Orders", FormMethod.Post))
            {
                <div class="row">
                    <h2 class="text-center mb-4">Order bàn <input name="numberOrder" id="numberOrder" type="text" value="@ViewBag.table" readonly class="text-center"></h2>
                    <div class="mb-3 col-6">
                        <label for="input-item" class="form-label">Món</label>
                        <select class="form-select" id="input-item" name="productId">
                            @foreach (var item in ViewBag.listProduct)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3 col-6">
                        <label for="input-quantity" class="form-label">Số lượng</label>
                        <input type="number" name="quantity" class="form-control" id="input-quantity" value="1">
                    </div>
                    <button type="submit" class="btn mb-4">Thêm món</button>
                </div>
            }
        </div>
